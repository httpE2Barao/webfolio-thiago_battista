generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  color       String?
  icon        String?
  parent      String?
  ordem       Int      @default(0)
  created_at  DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Album       Album[]

  @@index([slug])
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  ordem Int    @default(0)
}

model Album {
  id              String    @id
  titulo          String
  descricao       String?
  categoria       String
  subcategoria    String?
  tags            Json?
  coverImage      String?
  coverImageMobile  String?
  coverImageDesktop String?
  coverImageMobilePosition  String? @default("center")
  coverImageDesktopPosition String? @default("center")
  published       Boolean   @default(true)
  featured        Boolean   @default(false)
  ordem           Int       @default(0)
  created_at      DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  authorId        String?
  categoryId      String?
  accessPassword  String?
  basePhotoLimit  Int       @default(10)
  basePrice       Float     @default(200)
  extraPhotoPrice Float     @default(50)
  isForSale       Boolean   @default(false)
  isPrivate       Boolean   @default(false)
  User            User?     @relation(fields: [authorId], references: [id])
  Category        Category? @relation(fields: [categoryId], references: [id])
  Image           Image[]
  Order           Order[]

  @@index([categoria])
  @@index([created_at])
  @@index([subcategoria])
}

model Image {
  id         String      @id
  filename   String
  path       String
  titulo     String?
  descricao  String?
  ordem      Int         @default(0)
  featured   Boolean     @default(false)
  altText    String?
  metadata   Json?
  created_at DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  albumId    String
  Album      Album       @relation(fields: [albumId], references: [id], onDelete: Cascade)
  OrderItem  OrderItem[]

  @@index([albumId])
  @@index([ordem])
}

model Order {
  id            String      @id @default(cuid())
  customerName  String
  customerEmail String
  customerPhone String?
  albumId       String
  totalPhotos   Int
  totalPrice    Float
  status        String      @default("pending")
  paymentId     String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  Album         Album       @relation(fields: [albumId], references: [id])
  items         OrderItem[]

  @@index([status])
  @@index([albumId])
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String
  imageId String
  Image   Image  @relation(fields: [imageId], references: [id])
  Order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@unique([orderId, imageId])
}

model User {
  id        String   @id
  email     String   @unique
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Album     Album[]
}
