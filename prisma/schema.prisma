generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  color       String?
  icon        String?
  parent      String?
  created_at  DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Album       Album[]

  @@index([slug])
}

model Album {
  id           String    @id
  titulo       String
  descricao    String?
  categoria    String
  subcategoria String?
  tags         Json?
  coverImage   String?
  published    Boolean   @default(true)
  featured     Boolean   @default(false)
  ordem        Int       @default(0)
  created_at   DateTime  @default(now())
  updatedAt    DateTime
  authorId     String?
  categoryId   String?
  User         User?     @relation(fields: [authorId], references: [id])
  Category     Category? @relation(fields: [categoryId], references: [id])
  Image        Image[]

  @@index([categoria])
  @@index([created_at])
  @@index([subcategoria])
}

model Image {
  id         String   @id
  filename   String
  path       String
  titulo     String?
  descricao  String?
  ordem      Int      @default(0)
  featured   Boolean  @default(false)
  altText    String?
  metadata   Json?
  created_at DateTime @default(now())
  updatedAt  DateTime
  albumId    String
  Album      Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)

  @@index([albumId])
  @@index([ordem])
}

model User {
  id        String   @id
  email     String   @unique
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime
  Album     Album[]
}
